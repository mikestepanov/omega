#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Pre-push hook for bot tests
echo "🧪 Running bot tests before push..."

cd bots

# Run quick smoke tests
npm run test:pay-period -- --testNamePattern="should calculate current period correctly|should identify last day of period correctly" || {
    echo "❌ Pay period tests failed!"
    exit 1
}

echo "✅ Pre-push tests passed!"